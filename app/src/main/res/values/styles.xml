<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <!--
        Base application theme, dependent on API level. This theme is replaced
        by AppBaseTheme from res/values-vXX/styles.xml on newer devices.

    -->
    <style name="AppBaseTheme" parent="Theme.Myactionbar">
        <!--
            Theme customizations available in newer API levels can go in
            res/values-vXX/styles.xml, while customizations related to
            backward-compatibility can go here.

        -->
    </style>

    <!-- Application theme. -->
    <style name="AppTheme" parent="AppBaseTheme">
        <!-- All customizations that are NOT specific to a particular API-level can go here. -->

    </style>

    <!-- the theme applied to the application or activity -->
    <!-- <style name="CustomActivityTheme" parent="@style/Widget.AppCompat.ActionBar.Solid"> -->
    <!-- <item name="android:background">@color/green</item> -->
    <!-- other activity and action bar styles here -->


    <!-- </style> -->


    <!-- mian tab view layout -->
    <style name="MyTabButton">
        <item name="android:textSize">15.0sp</item>
        <item name="android:textColor">#000000</item>
        <item name="android:gravity">center_horizontal</item>
        <item name="android:background">@drawable/tab_btn_bg</item>
        <item name="android:layout_width">0.0dip</item>
        <item name="android:layout_height">fill_parent</item>
        <item name="android:paddingTop">15.0dp</item>
        <item name="android:layout_marginLeft">0.0dip</item>
        <item name="android:layout_marginRight">0.0dip</item>
        <item name="android:button">@null</item>
        <item name="android:layout_weight">1.0</item>
    </style>

    <!-- part list version -->
    <style name="text">
        <item name="android:textColor">#696969</item>
        <item name="android:textSize">20sp</item>
    </style>

    <style name="selections" parent="text">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">50dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:paddingLeft">10dp</item>
        <item name="android:background">@drawable/part_partbg</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:layout_marginTop">8dp</item>
    </style>

    <style name="PartStyle" parent="selections">
        <item name="android:drawableRight">@drawable/part_arrow</item>
    </style>

    <style name="loading_dialog" parent="android:style/Theme.Light">
        <item name="android:windowFrame">@null</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowBackground">@drawable/loading_dialog_bg</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:backgroundDimEnabled">true</item>
        <item name="android:backgroundDimAmount">0.6</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowContentOverlay">@null</item>
    </style>

</resources>